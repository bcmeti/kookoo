.row
  .span4
    
    #dashboard-stats.panel
      %article
        %a(href="#" class="thumbnail" style="float:left;margin-right:8px;")
          %img{"src"=>"http://flickholdr.com/50/50/face/#{current_user.id}", "alt"=>"#{current_user.full_name}"}
        
        %div
          %p= link_to current_user.full_name, user_path(current_user)
          %p View my profile

        .clearfix

        %div.mini-stats-list(style="margin-top: 10px;")
          %ul
            %li 4 messages
            %li 6 following
            %li 3 followers

        %div.compose-new-message
          %button.btn.btn-primary Compose new message

    #aboutus.panel
      %article
        %p koko
        %p Copyright 2012
        / = render "shared/aboutus"

  .span8
    #items-list.panel
      %header
        Messages
      %article
        %table
          - @messages.each do |message|
            %tr
              %td
                %a(href="#" class="thumbnail")
                  %img{"src"=>"http://flickholdr.com/50/50/face/#{current_user.id}", "alt"=>"#{current_user.full_name}"}    
              %td
                %p= link_to message.author.full_name, user_path(message.author)
                %p= "#{distance_of_time_in_words_to_now(message.created_at)} ago"
                %p= message.body




